<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twotowerstudios.virtualnotebookdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialDrawerTheme.Light">
        <activity android:name=".MainMenu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotebookSelection.NotebookSelection"
            android:label="@string/title_activity_notebook_selection" />
        <activity
            android:name=".NotebookMainActivity"
            android:label="@string/title_activity_notebook_main"></activity>
    </application>

</manifest>